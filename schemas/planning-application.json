{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id": "http://localo.com/schemas/planning-application.json#",
    "title": "Planning Application",
    "description": "A planning application",
    "type": "object",
    "properties": {
        "application-number": {
            "description": "The unique reference for the application",
            "type": "string",
            "required": true
        },
        "uprn": {
            "description": "The associated property reference number",
            "type": "string",
            "required": true
        },
        "applied-date": {
            "description": "The date the application was made",
            "type": "date",
            "required": true
        },
        "status": {
            "description": "The current status of the application, whether it has been approved or declined",
            "type": "string",
            "required": true
        },
        "approval-date": {
            "description": "The date the application was approved",
            "type": "string",
            "required": false
        }
    }
}